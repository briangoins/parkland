!!!
%html
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "NOODP", name: "ROBOTS"}/
    %meta{content: "initial-scale=1", name: "viewport"}/
    %title= title
    = csrf_meta_tags
    = stylesheet_link_tag :application, media: "all"
  %body
    %header.header
      = render "navbar"
    .container
      = render "flashes"
      = yield
      
      #myModal.modal.fade{"tabindex" => "-1", "role" => "dialog", "aria-labelledby" => "myModalLabel", "aria-hidden" => "true", "style" => "display: none;"}
        .modal-dialog
          .modal-content#new-modal
            .modal-body
              = render 'resources/form', resource: @new_resource

    = render "footer"
    = render "javascript"