%table.table.table-compressed.table-hover.table-striped
  %thead
    %tr
      %th Name
      %th Resources
      %th Owner
      %th.text-right Actions
  %tbody.js-clickable-rows
    - collections.each do |collection|
      %tr{data: {href: "#{collection_path(collection)}"}}
        %td= collection.name
        %td= collection.resources.count
        %td= collection.owner
        %td.js-clickable-non.text-right
          .btn-group
            - if can? :update, collection
              = link_to edit_collection_path(collection), class: "btn btn-xs btn-primary" do
                %i.fa.fa-pencil
                Edit
