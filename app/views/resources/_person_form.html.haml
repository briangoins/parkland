= simple_form_for(resource, html: {class: 'form-horizontal'}, wrapper: :horizontal_form, wrapper_mappings: { check_boxes: :horizontal_radio_and_checkboxes, radio_buttons: :horizontal_radio_and_checkboxes, file: :horizontal_file_input, boolean: :horizontal_boolean}) do |f|
  = f.error_notification

  .row
    .col-md-2
    .col-md-8
      .form-inputs
        = f.input :name, input_html: {class: "person-form-input form-input"}, placeholder: "Enter the individual's name"
        = f.input :href, input_html: {class: "person-form-input form-input"}, label: "Link", placeholder: "http://www..."
        = f.input :description, input_html: {class: "person-form-input form-input"}, placeholder: "Describe the individual briefly"
        = f.hidden_field :type, value: 'Person'
      %h3.btn.btn-default.org-btn#organization-btn
        %i.fa.fa-chevron-up.org-arrow#org-arrow
        Organization
          
      .form-inputs.org-info
        =f.input :organization, input_html: {class: "person-form-input form-input"}, placeholder: "Optional"
        =f.input :org_href, input_html: {class: "person-form-input form-input"}, label: "Organization Link", placeholder: "Optional   http://www..."
        =f.input :org_description, input_html: {class: "person-form-input form-input"}, placeholder: "Describe the organization briefly"

      .form-actions
        = f.button :submit